<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>BibleMultiConverter-SWORDEdition</artifactId>
	<parent>
		<groupId>biblemulticonverter</groupId>
		<artifactId>biblemulticonverter-parent</artifactId>
		<version>0.0-SNAPSHOT</version>
	</parent>
	<packaging>jar</packaging>
	<name>BibleMultiConverter SWORD Edition</name>
	<dependencies>
		<dependency>
			<groupId>biblemulticonverter</groupId>
			<artifactId>BibleMultiConverter-schemas</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>biblemulticonverter</groupId>
			<artifactId>BibleMultiConverter</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.github.AndBible</groupId>
			<artifactId>jsword</artifactId>
			<version>2.4.09</version>
			<exclusions>
				<exclusion>
					<!-- causes warnings on console and does not work on desktop anyway -->
					<groupId>de.psdev.slf4j-android-logger</groupId>
					<artifactId>slf4j-android-logger</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-jdk14</artifactId>
			<version>1.7.30</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.0.2</version>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>biblemulticonverter.Main</mainClass>
							<classpathPrefix>lib/</classpathPrefix>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>3.3.0</version>
				<configuration>
					<descriptors>
						<descriptor>${project.basedir}/../biblemulticonverter/src/assembly/dist.xml</descriptor>
					</descriptors>
					<attach>false</attach>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
		    <id>jitpack.io</id>
		    <url>https://jitpack.io</url>
		</repository>
	</repositories>
</project>
